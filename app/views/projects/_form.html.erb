<%= form_for(project) do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name %>
  <%= f.label :description %>
    <%= f.text_field :description %>
  <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  <%= f.label :status %>
    <% Project.statuses.each do |s,index| %>
      <%= s.capitalize %>
      <%= f.radio_button :status, s %>
    <% end %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit %>
<% end %>